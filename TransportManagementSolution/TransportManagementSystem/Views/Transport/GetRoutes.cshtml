        <form class="form-inline my-2 my-lg-0">
            <a class="nav-link" asp-action="Index">Log Out</a>
        </form>
    </div>
</nav>
<h1>Routes</h1>

<p>
    <a asp-action="Home">Home</a>
    <a asp-action="Index">Log Out</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h5>Route Number</h5>
            </th>
            <th>
                <h5>Vehicle Number</h5>
            </th>
            <th>
                <h5>Stop 1 </h5>
            </th>
            <th>
                <h5>Stop 2 </h5>
            </th>
            <th>
                <h5>Stop 3 </h5>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RouteNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stop1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stop2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stop3)
                </td>
                <td>
                    @Html.ActionLink("Select", "AllocateEmployee", new { RouteNumber=item.RouteNumber}) |
                    
                </td>
            </tr>

        }
    </tbody>
</table>