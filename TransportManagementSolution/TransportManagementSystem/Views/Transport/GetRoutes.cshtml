@model List<Route>

<link rel="stylesheet" href="~/css/" />
<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" asp-action="Home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Vehicles">Vehicles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Employees">Employees</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Routes">Routes</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Add
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="AddVehicle">Add Vehicle</a>
                    <a class="dropdown-item" asp-action="AddEmployee">Add Employee</a>
                    <a class="dropdown-item" asp-action="AddRoute">Add Route</a>

