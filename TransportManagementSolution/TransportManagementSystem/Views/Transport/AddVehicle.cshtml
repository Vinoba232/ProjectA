<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVehicle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleNumber" class="control-label"></label>

                @Html.EditorFor(m => m.VehicleNumber, new { @class = "form-control" })
                <span asp-validation-for="VehicleNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                @Html.EditorFor(m => m.Capacity, new { @class = "form-control" })
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAC" /> @Html.DisplayNameFor(model => model.IsAC)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOperational" /> @Html.DisplayNameFor(model => model.IsOperational)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AvailableSeats" class="control-label"></label>
                @Html.EditorFor(m => m.AvailableSeats, new { @class = "form-control" })
                <span asp-validation-for="AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

